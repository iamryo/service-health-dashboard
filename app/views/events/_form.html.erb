<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :start, "Start" %><br />
    <%= f.text_field :start%>
  </div>
  <br />
  <div class="field">
    <%= f.label :service, "Service" %><br />
    <%= f.collection_select :service_id, Service.all, :id, :name %>

  </div>
  <br />
  <div class="field">
    <%= f.label :status, "Status" %><br />
    <%= f.collection_select :status_id, Status.all, :id, :name %>

  </div>
  <br />

  <div class="field">
    <%= f.label :message, "Message" %><br />
    <%= f.text_area :message, :rows=>10, :cols=>40 %>

  </div>
  <br />
  <div class="field">
    <%= f.label :event, "Event Type" %><br />
    <%= f.collection_select :event_type_id, EventType.all, :id, :name, :include_blank => true %>

  </div>
  <br />

  <div class="field">
    <%= f.label :invisible, "Invisible" %><br />
    <%= f.check_box :invisible %>
  </div>
  <br />
  
  <div class="actions">
    <%= f.submit 'Create', class: 'btn btn-primary'%>
  </div>
  <br />

<% end %>

<script type="text/javascript">
  $(function() {
    $('#event_start').datetimepicker({
      showOn: "button",
      buttonImage: "/assets/calendar.png",
      buttonImageOnly: true,
      dateFormat: "yy MM d",
      timeFormat: "h:mmtt" 
    })
  });
</script>